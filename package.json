{
  "name": "api-battle",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "build": "npm run build -w apps/backend && npm run build -w apps/frontend",
    "dev": "npm run dev -w apps/backend",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "npm run test -w apps/backend && npm run test -w apps/frontend",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.5.0",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
